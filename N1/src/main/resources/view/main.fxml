<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <children>
        <!-- Título centralizado no topo -->
        <Label layoutX="100.0" layoutY="20.0" text="Bem vindo ao SDF">
            <font>
                <Font size="20.0" />
            </font>
        </Label>

        <!-- Botão Gerenciar Medicamentos com largura maior -->
        <Button fx:id="btnGerenciarMedicamentos" layoutX="100.0" layoutY="80.0" mnemonicParsing="false" onAction="#gerenciarMedicamentos" prefHeight="50.0" prefWidth="200.0" text="Gerenciar Medicamentos">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Botão Relatórios mantido -->
        <Button fx:id="btnRelatorios" layoutX="100.0" layoutY="160.0" mnemonicParsing="false" onAction="#abrirRelatorios" prefHeight="50.0" prefWidth="200.0" text="Relatórios">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
